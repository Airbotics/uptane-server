{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@airbotics-core/*": ["src/core/*"],
            "@airbotics-middlewares": ["src/middlewares/"],
            "@airbotics-modules/*": ["src/modules/*"],
            "@airbotics-types": ["src/types/"],
            "@airbotics-config": ["src/config/"]
        },
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "strictNullChecks": true
    },
    "include": [
        "./src/",
        "./scripts/",
        "./tests/",
        "./.scratch/"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}